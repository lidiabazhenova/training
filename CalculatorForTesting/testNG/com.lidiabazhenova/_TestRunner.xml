<?xml version="1.0" encoding="UTF-8"?>
<suite name="Suite NG" parallel="tests" thread-count="5">
    <listeners>
        <listener class-name="com.lidiabazhenova.Listeners"/>

    </listeners>

    <test name="Test One" parallel="classes" thread-count="4">
        <classes>
            <class name="com.lidiabazhenova.CalculatorNG"/>
            <methods>
                <exclude name="add"/>
                <exclude name="sub"/>
                <exclude name="mul"/>
                <exclude name="div"/>
                <exclude name="divByNull"/>
            </methods>
        </classes>
    </test>
    <test name="Test Two">
        <classes>
            <class name="com.lidiabazhenova.CalculatorNG"/>
        </classes>
    </test>
    <test name="TestGroupsNG">
        <groups>
            <run>
                <include name="operations.*"/>
            </run>
        </groups>

        <classes>
            <class name="com.lidiabazhenova.CalculatorNG"/>
        </classes>
    </test>
</suite>
